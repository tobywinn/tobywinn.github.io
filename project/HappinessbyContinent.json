{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "The Global Happiness Gap",
    "subtitle":"Positive Affect, Source: The World Happiness Report",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
    "data": {
    "url": "https://raw.githubusercontent.com/tobywinn/tobywinn.github.io/main/project/ContinentAverages.csv",
    "format": {"type": "csv"}
  },
  
  "height": 300,
  "width": 310,
    
  "mark": {"type": "line", "point": false},
  
  "encoding": {

    "x": {
      "field": "Year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },

    "y": {
      "field": "Positive affect",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false},
      "scale": {"domain": [0.6,0.95]}
    },

    "color": {
      "field": "Continent",
      "type": "nominal",
      "scale": {"scheme": "yellowgreenblue"},
      "title": null,
      "legend": {
        "orient": "top-right"
      }
    }
  }
}
