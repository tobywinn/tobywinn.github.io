{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
    "title": {
      "text": "Compensation and Satisfaction at Bulge Bracket Banks",
      "subtitle":"Scraped from Glasdoor.com",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
  
    "data": {"url": "https://raw.githubusercontent.com/tobywinn/tobywinn.github.io/main/SalaryandRatingsAverage.csv"},
  
    "mark": "point",
  
    "height": 280,
  
    "width": 235,
  
    "encoding": {
      "x": {
        "field": "Rating", 
        "type": "quantitative",
        "scale": {"domain": [2.5,5]},
        "title": null,
        "axis": {"grid": false}
