            "title": "Firm"
            },
          {
            "field": "Seniority",
            "type": "nominal",
            "title": "Seniority"
            },
          {
            "field": "Average Salary",
            "type": "quantitative",
            "title": "Compensation"
            }
        ]
  
    }
