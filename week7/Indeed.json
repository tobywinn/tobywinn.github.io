{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Satisfaction Ratings at top city firms",
    "subtitle":"Scraped from Indeed.com",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/tobywinn/tobywinn.github.io/main/week7/IndeedRatings.csv"
  },
  
  "height": 250,
  "width": 320,
   
  "mark": {
    "type": "bar",
    "color": "darkblue",
    "clip": true
  },
 
  "encoding": {

    "x": {
      "field": "Firm",
      "type": "nominal",
      "title": null,
      "axis": {"grid": false, "labelAngle": 45}
    },

    "y": {
      "field": "Rating",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false},
      "scale": {"domain": [3.5,4.1]}
    },

    "color": {
      "field": "Firm",
      "type": "nominal",
      "scale": {"scheme": "yellowgreenblue"},
      "title": null,
      "legend": null
    }
}
}